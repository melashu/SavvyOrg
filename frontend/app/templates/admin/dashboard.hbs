<div class="flex flex-row min-h-screen bgcolor">
    <Sidebar />
    {{#if (eq this.fullURL "/admin/dashboard")}}
    <div class="flex flex-col flex-1">
        <InternalHeader />
        <div class="flex-1 p-6 text-black dark:text-white bg-gray-50 dark:bg-gray-900">
            <h1 class="text-4xl font-extrabold mb-8 text-gray-800 dark:text-gray-100">Dashboard Overview</h1>

            <section class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-8">
                {{!-- Today's Orders --}}
                <div
                    class="p-6 bg-gradient-to-br from-pink-500 to-purple-600 text-white rounded-lg shadow-lg hover:scale-105 transform transition duration-300">
                    <h2 class="text-lg font-medium">Today's Orders</h2>
                    <p class="text-4xl font-bold">$14,920.54</p>
                    <p class="mt-2 text-sm">Sold: 224, Returns: 12</p>
                </div>

                {{!-- Weekly Sales --}}
                <div
                    class="p-6 bg-gradient-to-br from-green-400 to-blue-500 text-white rounded-lg shadow-lg hover:scale-105 transform transition duration-300">
                    <h2 class="text-lg font-medium">Weekly Sales</h2>
                    <p class="text-4xl font-bold">$84,920.54</p>
                    <p class="mt-2 text-sm">14% increase</p>
                </div>

                {{!-- Store Overview --}}
                <div
                    class="p-6 bg-white dark:bg-gray-800 rounded-lg shadow-lg hover:scale-105 transform transition duration-300">
                    <h2 class="text-lg font-medium text-gray-800 dark:text-gray-100">Store Overview</h2>
                    <p class="text-4xl font-bold text-gray-900 dark:text-white">124</p>
                    <button
                        class="mt-4 px-6 py-2 bg-blue-500 text-white font-medium rounded hover:bg-blue-600 transition"
                        type="button">
                        Add New Product
                    </button>
                </div>

                {{!-- Customer Summary --}}
                <div
                    class="p-6 bg-white dark:bg-gray-800 rounded-lg shadow-lg hover:scale-105 transform transition duration-300">
                    <h2 class="text-lg font-medium text-gray-800 dark:text-gray-100">Recent Customers</h2>
                    <div class="flex space-x-4 mt-4">
                        <img src="/images/author_profile.png" alt="Amber"
                            class="w-12 h-12 rounded-full ring-2 ring-blue-500">
                        <img src="/images/author_profile.png" alt="Nate"
                            class="w-12 h-12 rounded-full ring-2 ring-green-500">
                        <img src="/images/author_profile.png" alt="John"
                            class="w-12 h-12 rounded-full ring-2 ring-purple-500">
                    </div>
                </div>
            </section>

            <section class="grid grid-cols-1 lg:grid-cols-2 gap-8">
                {{!-- Sales Statistics --}}
                <div
                    class="p-6 bg-white dark:bg-gray-800 rounded-lg shadow-lg hover:scale-105 transform transition duration-300">
                    <h2 class="text-lg font-medium text-gray-800 dark:text-gray-100">Historical Sales Statistics</h2>
                    <div class="h-64 mt-6 bg-gray-100 dark:bg-gray-700 rounded-lg flex items-center justify-center">
                        <p class="text-gray-500 dark:text-gray-400">[Chart Placeholder]</p>
                    </div>
                </div>

                {{!-- Daily Sales Summary --}}
                <div
                    class="p-6 bg-white dark:bg-gray-800 rounded-lg shadow-lg hover:scale-105 transform transition duration-300">
                    <h2 class="text-lg font-medium text-gray-800 dark:text-gray-100">Daily Sales Summary</h2>
                    <div class="h-64 mt-6 bg-gray-100 dark:bg-gray-700 rounded-lg flex items-center justify-center">
                        <p class="text-gray-500 dark:text-gray-400">[Chart Placeholder]</p>
                    </div>
                </div>
            </section>
        </div>
        {{!-- Footer --}}

        <footer class="bg-gray-800 text-gray-400 py-4">
            <div class="container mx-auto px-6 text-center">
                <p>&copy; 2025 Dashboard, Inc. All rights reserved.</p>
            </div>
        </footer>
    </div>
    {{else}}
    {{outlet}}
    {{/if}}
</div>