{{!-- app/templates/testimony/post.hbs --}}
<div class="container mx-auto p-6 max-w-2xl">
    <h2 class="text-4xl font-bold text-center text-blue-600 mb-6">Share Your Testimony</h2>
    <form {{on "submit" this.createTestimonial}} class="bg-white p-8 rounded-lg shadow-lg transition-transform hover:scale-105">
        <div class="mb-6">
            <label class="block text-gray-700 font-semibold">Company:</label>
            <input id="company" type="text" class="w-full p-3 border rounded-lg focus:ring-2 focus:ring-blue-400 outline-none" placeholder="Company Name" required/>
        </div>
                <div class="mb-6">
            <label class="block text-gray-700 font-semibold">Name:</label>
            <input id="name" type="text" class="w-full p-3 border rounded-lg focus:ring-2 focus:ring-blue-400 outline-none" placeholder="Your Name" required/>
        </div>
        <div class="mb-6">
            <label class="block text-gray-700 font-semibold">Role:</label>
            <input id="role" type="text" class="w-full p-3 border rounded-lg focus:ring-2 focus:ring-blue-400 outline-none" placeholder="Your Role" required/>
        </div>
        <div class="mb-6">
            <label class="block text-gray-700 font-semibold">Testimony:</label>
            <textarea
                id="testimony" class="w-full p-3 border rounded-lg focus:ring-2 focus:ring-blue-400 outline-none h-32 resize-none" placeholder="Your Testimonial" required></textarea>
        </div>
        <button type="submit"
            class="w-full bg-blue-500 text-white px-5 py-3 rounded-lg font-semibold text-lg hover:bg-blue-600 transition-all">Submit</button>
    </form>
</div>