<div class="min-h-screen flex items-center justify-center bgcolor">
    <div class="bg-white shadow-lg p-6 rounded-lg">
        {{#if this.isVerified}}
        <div class="text-center">
            <h2 class="text-2xl font-bold">Email Verified!</h2>
            <p>Your email has been successfully verified.</p>
            <a href="/login" class="text-blue-600 underline">Go to Login Page</a>
        </div>
        {{else if this.error}}
        <div class="text-center">
            <h2 class="text-2xl font-bold">Verification Failed</h2>
            <p>{{this.error}}</p>
        </div>
        {{else}}
        <div class="text-center">
            <h2 class="text-2xl font-bold">Verifying...</h2>
            <p>Please wait while we verify your email.</p>
        </div>
        {{/if}}
    </div>
</div>