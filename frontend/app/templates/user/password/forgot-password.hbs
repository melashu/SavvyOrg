<div class="min-h-screen flex items-center justify-center bgcolor">
    <div class="bg-white shadow-lg p-6 rounded-lg">
        {{#if this.successMessage}}
        <div class="text-center">
            <h2 class="text-2xl font-bold text-green-600">{{this.successMessage}}</h2>
        </div>
        {{else}}
        <form {{on "submit" this.handleSubmit}} class="space-y-4">
            <h2 class="text-2xl font-bold">Reset Your Password</h2>

            <div>
                <label for="email" class="block text-sm font-medium text-gray-700">Email Address</label>
                <input type="email" id="email"
                    class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm" required />
            </div>

            {{#if this.errorMessage}}
            <p class="text-red-500 text-sm">{{this.errorMessage}}</p>
            {{/if}}

            <button type="submit" class="w-full bg-blue-500 text-white px-4 py-2 rounded-lg">
                Send Reset Email
            </button>
        </form>
        {{/if}}
    </div>
</div>