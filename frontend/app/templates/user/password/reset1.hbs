<div class="min-h-screen flex items-center justify-center bg-gray-50">
    <div class="bg-white shadow-lg p-6 rounded-lg">
        {{#if this.success}}
        <div class="text-center">
            <h2 class="text-2xl font-bold">Password Reset Successfully!</h2>
            <a href="/login" class="text-blue-600 underline">Login</a>
        </div>
        {{else}}
        <form {{on "submit" this.handleSubmit}} class="space-y-4">
            <h2 class="text-2xl font-bold">Reset Your Password</h2>

            <div>
                <label class="block text-sm font-medium text-gray-700">New Password</label>
                <input type="password" id="password"
                    class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm" required />
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700">Confirm Password</label>
                <input type="password" id="confirmPassword"
                    class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm" required />
            </div>

            {{#if this.error}}
            <p class="text-red-500 text-sm">{{this.error}}</p>
            {{/if}}

            <button type="submit" class="w-full bg-blue-500 text-white px-4 py-2 rounded-lg">
                Reset Password
            </button>
        </form>
        {{/if}}
    </div>
</div>