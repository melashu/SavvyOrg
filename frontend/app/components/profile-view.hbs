<div class="flex flex-col flex-1">
  <InternalHeader />
<div class="min-h-screen bg-gray-100 flex items-center justify-center grow">
  {{#if this.loading}}
    <div>Loading user data...</div>
  {{else}}
    <div class="bg-white shadow-lg rounded-lg p-8 w-full max-w-3xl">
      <h1 class="text-2xl font-semibold mb-6">Profile Information</h1>
      <div class="flex flex-col items-center mb-6">
        {{#if this.userData.profilePicture}}
          <img
            src={{this.userData.profilePicture}}
            alt="Profile"
            class="w-32 h-32 object-cover rounded-full mb-4"
          />
        {{else}}
          <div class="w-32 h-32 bg-gray-200 rounded-full mb-4 flex items-center justify-center">
            <span class="text-gray-500">No Image</span>
          </div>
        {{/if}}
        <h2 class="text-lg font-semibold">{{this.userData.fullName}}</h2>
        <p class="text-gray-500">{{this.userData.email}}</p>
      </div>
            {{!-- Edit Profile Link --}}
<div class="mb-6">
  <a href={{concat 'edit' "" }} class="text-indigo-600 hover:underline">
    Edit Profile
  </a>
</div>

      <div class="mb-6">
        <h2 class="text-lg font-medium mb-2">Bio</h2>
        <p class="text-gray-700">{{this.userData.bio}}</p>
      </div>

      <div class="space-y-4">
        <h2 class="text-lg font-medium">Social Links</h2>
        <div>
          <strong>Facebook:</strong>
          <a
            href={{this.userData.socialLinks.facebook}}
            class="text-indigo-600"
            target="_blank"
            rel="noopener noreferrer"
          >
            {{this.userData.socialLinks.facebook}}
          </a>
        </div>
        <div>
          <strong>LinkedIn:</strong>
          <a
            href={{this.userData.socialLinks.linkedin}}
            class="text-indigo-600"
            target="_blank"
            rel="noopener noreferrer"
          >
            {{this.userData.socialLinks.linkedin}}
          </a>
        </div>
        <div>
          <strong>Twitter:</strong>
          <a
            href={{this.userData.socialLinks.twitter}}
            class="text-indigo-600"
            target="_blank"
            rel="noopener noreferrer"
          >
            {{this.userData.socialLinks.twitter}}
          </a>
        </div>
      </div>
    </div>
  {{/if}}
</div>
</div>