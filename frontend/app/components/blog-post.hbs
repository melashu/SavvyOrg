<div class="flex flex-col flex-1">
    <InternalHeader />
<div class="bg-white grow dark:bg-[#0A2950]">
    <div class="rounded-xl shadow-lg bg-white dark:bg-[#0A2964] mx-8">
        <h1 class="text-3xl font-bold text-center mb-8 text-gray-800 dark:text-white">Create a New Blog Post</h1>
        <form class="space-y-6" {{on "submit" this.handleSubmit}}>
            <div>
                <label class="block text-sm font-medium text-gray-700 dark:text-white">Title</label>
<input type="text" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm" value={{this.title}} {{on "input"
    this.updateTitle}} required />
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 dark:text-white">Short Summary</label>
                <input type="text" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm" value={{this.description}} {{on "input"
                    this.updateDescription}} required />
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 dark:text-white">Content</label>
                <div id="editor" class="border p-2 min-h-[200px] rounded bg-white dark:bg-[#0A2950]" {{did-insert
                    this.initializeEditor}}></div>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 dark:text-white">Image</label>
                <input type="file" class="mt-1 block w-full text-sm text-gray-500" {{on "change"
                    this.handleFileChange}} />
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 dark:text-white">Status</label>
<select class="block w-full rounded-md border-gray-300 shadow-sm" value={{this.status}} {{on "change"
    this.updateStatus}}>
    <option value="draft">Draft</option>
    <option value="published">Published</option>
    <option value="archived">Archived</option>
</select>

            </div>
            <button class="btn" type="submit">Post</button>
            {{#if this.message}}
            <p class="text-center mt-4 text-green-500">{{this.message}}</p>
            {{/if}}
        </form>
    </div>
</div>
</div>