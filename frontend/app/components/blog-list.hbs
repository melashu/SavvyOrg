<div class="p-4 bg-gray-100 rounded-lg">
    <h2 class="text-2xl font-bold mb-4">Blog List</h2>
    <ul>
        {{#each @blogs as |blog|}}
        <li class="p-4 border rounded mb-2">
            <h3 class="text-lg font-semibold">{{blog.title}}</h3>
            <p>{{blog.content}}</p>
            <small>By {{blog.author}}</small>
            <button class="bg-red-500 text-white px-4 py-1 rounded ml-2" type="button" {{on "click" (fn @onDelete
                blog.id)}}>Delete</button>
        </li>
        {{/each}}
    </ul>
</div>